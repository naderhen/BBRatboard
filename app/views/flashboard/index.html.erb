
<% if @sales%>

	<% @sales.group_by(&:user).sort.each do |user, sales| %>
		<div id="<%=user.login%>-sales" class="flash_column">
			<h1><%= user.full_name%></h1>
			<h2><%= sales.size%> Sales</h2>
			<ul class="user_sales" id="<%=user.login%>-sales-list">
				<% for sale in sales do %>
					<li>
						<p><%= sale.customer.name %></p>
					
						<p><%= sale.amount%></p> 
						<p class="ratgrade_name"><%= sale.ratgrade.name %> </p>
						<p class="sale_price"><%= number_to_currency(sale.price) %><p>
					</li>
				<% end %>
			</ul>
		</div><!-- user_column -->

	<% end %>
	
<% else %>

<h1> No RATBoard Available!</h1>

<% end %>
