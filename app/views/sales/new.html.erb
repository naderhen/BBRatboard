<h1>New sale</h1>

<%= form_for [@ratgrade,@sale] do |f| %>


  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>

	<%= f.hidden_field :user_id, :value => current_user.id %> 
	  <p>
	    <%= f.label :customer_id %><br />
		<%= collection_select(:sale, :customer_id, Customer.all, :id, :name) %>
	  </p>
			<%= f.hidden_field :allocated, :value => "false" %> 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sales_path %>