
<% if current_user.staff? %>

<% if @ratboard%>
	<h1>Today's RATboard <span><%= link_to "Sales Summary", rat_sales_board_path(@ratboard)%></span></h1>
	<%= render 'boards/ratboard'%>
	
	
	<% content_for(:quick_title) do %>
	Your Sales Today
	<% end %>

	<% content_for(:quick_box) do %>
		<%= render 'user_sales'%>
	<% end %>
	
	
	
	
<% else %>

	<h2>There is no RATBoard associated with today's date!</h2
	<h3> Click <%=link_to "Here", new_board_path%> to create one</h3>
<% end %>



<% else %>







<h1>Listing Your Market Reports</h1>

<table class="stylized">
  <tr>
    <th>Report</th>
	<th>Sent To</th>
	<th>Actions</th>
	<th>&nbsp;</th>
	<th>&nbsp;</th>
	<th>&nbsp;</th>
	<th>&nbsp;</th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%=h report.report_date.to_s(:long) %></td>
	<td><%=h report.users.collect{|u|u.full_name}.join(', ')%></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete %></td>
 	<td><%= link_to 'Distribute', distribute_report_path(report), :confirm => 'Are you sure?' %></td>
	<td><%= link_to 'Download (PDF)', report_path(report, :format=>"pdf") %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Report', new_report_path %>






<% end%>




