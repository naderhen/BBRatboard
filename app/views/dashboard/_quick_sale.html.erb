<div id="newsale_form">

<%= form_for @sale do |f| %>

	<% if @sale.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this post from being saved:</h2>

	      <ul>
	      <% @sale.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	<p>
	    <%= f.label "Customer" %><br />
		<%= f.text_field :customer_id, :class=>"hide_me"%>

		<input type="text" name="autocomp" autocomplete="<%=autocomplete_customer_name_sales_path%>" id_element="#sale_customer_id">

	  </p>


  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
	
	

	<p>
    	<%= f.label :price %><br />
	    <%= f.text_field :price %>
  	</p>

	<p>
    	<%= f.label :fob %><br />
	    <%= f.text_field :fob %>
  	</p>

	<p>
    	<%= f.label :notes %><br />
	    <%= f.text_area :notes %>
  	</p>

	

	
	  
	
	
	<%= f.hidden_field :ratgrade_id %>
	

	<%= f.hidden_field :warehouse_id %> 
	
	<%= f.hidden_field :user_id, :value => current_user.id %> 
	<%= f.hidden_field :board_id, :value => @ratboard.id %> 
	<%= f.hidden_field :allocated, :value => "false" %> 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sales_path %>

</div><!-- newsale_form -->