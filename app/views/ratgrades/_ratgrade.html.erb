<tr class="ratgrade_row">
    <td><%= link_to ratgrade.name,{:controller=>"ratgrades", :action=>'show', :id=>ratgrade.id} %>
		<br />
			(<%=h ratgrade.availdate.to_s(:short) %>)
		<br />
	</td>

	<%if ratgrade.availableamt>0 %>	
  		<td class="availamt"><%= number_with_precision(ratgrade.availableamt,:precision=> 0) %></td>
	<% else %>
		<td class="negavail"><%= number_with_precision(ratgrade.availableamt,:precision=> 0) %></td>
	<% end %>

	<td><%=h ratgrade.sold %></td>
	<td><%=h ratgrade.total %></td>
	<% @salesreps.each do |salesrep|%>
		<td class="clickable" ><%= number_with_precision(ratgrade.sales.sum('amount',:conditions=>{:user_id=>salesrep.id}),:precision=> 0)%></td>
	<%end%>
	
	<td>
		<%= ratgrade.average_price%>
	</td>
	
	<td class="last">
		<a href="<%=new_ratgrade_sale_path(ratgrade)%>" class="btn"><span class="icon icon-add"> </span></a>
	</td>
	<td class="last">
		<a href="" class="sale_handle" data-ratgrade_id="<%=ratgrade.id%>" data-ratgrade_name="<%= ratgrade.name %>" data-warehouse_id="<%= ratgrade.warehouse.id %>" data-warehouse_name="<%= ratgrade.warehouse.name %>" data-board_id="<%= @ratboard.id %>" >Sell</a>
	</td>
</tr>