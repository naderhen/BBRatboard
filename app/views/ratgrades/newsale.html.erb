
	<h1>New sale for <%=@ratgrade.name%></h1>
	<h2> Total Available: <%= @ratgrade.availableamt%></h2>

	<%= form_for(@sale) do |f| %>
	<fieldset>
	  <%= f.error_messages %>


	    <%= f.label :amount %><br />
	    <%= f.text_field :amount %>

	  <p>
		<%= f.hidden_field :ratgrade_id, :value => @ratgrade.id %> 
	  </p>
	  <p>
	    <%= f.label :customer_id %><br />
		<%= collection_select(:sale, :customer_id, Customer.all, :id, :name) %>
	  </p>


			<%= f.hidden_field :user_id, :value => current_user.id %> 
			<%= f.hidden_field :allocated, :value => "false" %> 
	<p>
	  <p>
	    <%= f.submit 'Create' %>
	  </p>
	</fieldset>
	<% end %>

	<%= link_to 'Back', sales_path %>
