<%= content_for :headline do %>
<h1>RATGrade Sales Summary &rarr; <span><%= @ratgrade.name%> out of <%= @ratgrade.warehouse.name%></span></h1>

<% end %>


<div id="orders_chart" style="width: 828px; height: 300px;"></div> 

<script type="text/javascript" charset="utf-8">  
  $(function () {  
  new Highcharts.Chart({  
    chart: { renderTo: 'orders_chart' },  
    title: { text: 'Orders by Time' },  
    xAxis: { type: 'datetime',
	        dateTimeLabelFormats: {
	            hour: '%H:%M'   
	        }}, 
    yAxis: {  
      title: { text: 'Dollars' }  
    },  

	series: [{
	         name: 'Order Amount',
				pointInterval: 18000 ,  
				pointStart: <%= @sales.minimum(:created_at).to_i * 1000 %>,
	         data: [
			<% @sales.each do |sale| %> 
			<%= sale.amount %>,
			<% end %>
			]
	      }, {
	         name: 'Average Price',
				pointInterval: 18000 ,  
				pointStart: <%= @sales.minimum(:created_at).to_i * 1000 %>,
	         data: [
			<% @sales.each do |sale| %> 
			<%= @sales.average(:amount) %>,
			<% end %>
			]
	      }]
	

  });  
});
</script>




<% @sales.group_by(&:user).each do |user,sales| %>
	<h2><%=user.full_name %></h2>
	<table class="stylized">
  	<tr>
	    <th>Amount</th>
	    <th>Grade</th>
	    <th>Salesperson</th>
	    <th>Customer</th>
	    <th>Allocated</th>
		<th>Actions</th>
		<th>&nbsp; </th>
		<th>&nbsp; </th>
	 </tr>


  	<% sales.each do |sale| %>
	<tr>
    	<td><%=h sale.amount %></td>
	    <td><%=h sale.ratgrade.name %></td>
	    <td><%=h sale.user.full_name %></td>
	    <td><%=h sale.customer.name %></td>
	    <td><%=h sale.allocated %></td>
	    <td><%= link_to 'Show', sale %></td>
	    <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
	    <td><%= link_to 'Destroy', sale, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
	<% end%>
	</table>
<% end %>
