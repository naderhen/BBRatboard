<%= content_for :headline do %>
<h1>Market Report &rarr; <span>New</span></h1>
<% end %>


<h1><%= @customer.name %> - (<%= @customer.phone %>)</h1>
<h3><%= @customer.contact %></h3>
<h3><%= @customer.address1 %></h3>
<h3><%= @customer.address2 %></h3>

<h3><%= @customer.city %>,
<%= @customer.state %>
<%= @customer.zip %>
<%= @customer.country %> </h3>


<p>Email: <%= @customer.email %></p>

<p>Fax: <%= @customer.fax %></p>
<p><%= @customer.client_type %></p>
<p>Euler Rating: <%= @customer.euler %></p>



<% content_for(:shortcut_title) do %>
	Attachments
<% end %>

<% content_for(:shortcut_box) do %>
	<%= render 'customers/attachments'%>
<% end %>









<h1>Listing calls</h1>

<table class="full stylized">
  <tr>
    <th>User</th>
    <th>Customer</th>
    <th>Call time</th>
    <th>Notes</th>
    <th></th>
    <th></th>
  </tr>

<%for call in @customer.calls %>
  <tr>
    <td><%= call.user.login %></td>
    <td><%= call.customer.name %></td>
    <td><%= call.call_time %></td>
    <td><%= call.notes %></td>
    <td><%= link_to 'Edit', edit_customer_call_path(@customer,call) %></td>
    <td><%= link_to 'Destroy', [@customer, call], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Call', new_customer_call_path(@customer) %>



