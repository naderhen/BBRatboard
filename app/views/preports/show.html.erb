				<td><%= prediction.twohlow ? (number_to_currency prediction.twohlow) : "-"; %></td>
				
				<td><%= prediction.bhigh ? (number_to_currency prediction.bhigh) : "-"; %></td>
				<td><%= prediction.blow ? (number_to_currency prediction.blow) : "-"; %></td>
			</tr>
		<% end %>
		
			
	</tbody>
	
</table>



